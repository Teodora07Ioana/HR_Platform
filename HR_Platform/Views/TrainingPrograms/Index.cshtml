@model IEnumerable<HR_Platform.Models.TrainingProgram>

<h2>Training Programs</h2>
<div id="notificationContainer"></div>

<table class="table">
    <thead>
        <tr>
            <th>Program Name</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var program in Model)
        {
            <tr>
                <td>@program.ProgramName</td>
                <td>@program.Description</td>
                <td>@program.StartDate.ToShortDateString()</td>
                <td>@program.EndDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@program.TrainingProgramID" class="btn btn-info">Details</a>
                    <form asp-controller="EmployeeTrainings" asp-action="Enroll" method="post" class="d-inline">
                        <input type="hidden" name="trainingProgramId" value="@program.TrainingProgramID" />
                        <button type="submit" class="btn btn-primary">Enroll</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}
<style>
    .notification-container {
        position: fixed;
        top: 10px;
        right: 10px;
        width: 300px;
        z-index: 1000;
    }
    .alert {
        margin-bottom: 10px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f8f9fa;
    }
</style>
